{
  "name": "tailwind-autofix-canonical-classnames",
  "displayName": "Tailwind Canonical Classes Autofix",
  "version": "0.0.3",
  "description": "Auto-fix Tailwind CSS canonical class suggestions on save, as suggested by https://github.com/tailwindlabs/tailwindcss/discussions/19323.",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juliusmarminge/tailwind-autofix-canonical-classnames"
  },
  "publisher": "juliusmarminge",
  "main": "./dist/extension.js",
  "scripts": {
    "lint": "oxlint --type-aware --type-check && oxfmt",
    "build": "bun build src/extension.ts --outfile dist/extension.js --format=cjs --target=node --external vscode"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^22.12.0",
    "@types/vscode": "^1.85.0",
    "oxfmt": "0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "0.11.4"
  },
  "contributes": {
    "configuration": {
      "title": "Tailwind Canonical Classes Autofix",
      "properties": {
        "tailwindCanonicalClasses.fixOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Apply canonical Tailwind class fixes on save."
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "packageManager": "bun@1.3.8"
}
